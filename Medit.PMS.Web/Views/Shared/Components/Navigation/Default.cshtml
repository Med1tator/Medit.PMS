@model List<Medit.PMS.Application.MenuApp.Dtos.MenuDto>

<li class="header">权限管理<li>
@foreach (var menu in Model)
{
    var isActive = ViewBag.CurrentMenu == menu.Code;// 判断当前功能是否激活
    <li class="@(isActive?"active":"")">
        <a href="@menu.Url">
            <i class="fa fa-link"></i>
            <span>@menu.Name</span>
        </a>
    </li>
}